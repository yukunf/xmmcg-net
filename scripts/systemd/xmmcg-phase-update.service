[Unit]
Description=XMMCG Phase Status Update Service
After=network.target

[Service]
Type=oneshot
User=www-data
Group=www-data
WorkingDirectory=/var/www/xmmcg-net/backend/xmmcg
Environment="PATH=/var/www/xmmcg-net/.venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/var/www/xmmcg-net/scripts/update_phase_linux.sh

# 日志配置
StandardOutput=append:/var/www/xmmcg-net/logs/phase_update_systemd.log
StandardError=append:/var/www/xmmcg-net/logs/phase_update_systemd_error.log

# 安全设置
PrivateTmp=true
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
